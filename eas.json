{
  "cli": { "appVersionSource": "remote" },
  "build": {
    "production": {
      "env": {
        "NODE_ENV": "production",
        "EXPO_NO_TELEMETRY": "1"
      },
      "android": {
        "buildType": "apk",
        "credentialsSource": "local"
      },
      "hooks": {
        "post-install": "npx -y expo install --non-interactive expo-intent-launcher || true"
      }
    }
  }
}

